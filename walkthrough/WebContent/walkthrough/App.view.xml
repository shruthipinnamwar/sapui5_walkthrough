<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="walkthrough.App" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
	<Button text = "SayHello" press = ".onShowHello"></Button>
		<Button text="{i18n>showHelloButtonText}"
						press=".onPress"
						ariaDescribedBy="comingSoonButtonDescription genericButtonDescription"
						enabled="true">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Button>
			
				 <Input
     			 value="{/recepient/name}"
     			 description="{/recepient/name}"
     			 valueLiveUpdate="true"
      			 width="60%"/>
	 
		</content>
	</Page>
</core:View>